            <th>ID</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>Department</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <% Users.forEach(function(User){ %>
            <tr class="clickable-row" data-href="https://w...content-available-to-author-only...e.com/feed/history">
              <td>2017331091</td>
              <td><%= User.firstname%> <%= User.lastname%></td>
              <td><%= User.email%></td>
              <td><%= User.department%></td>
              <td><a href="https://stackoverflow.com/questions/17147821/how-to-make-a-whole-row-in-a-table-clickable-as-a-link">Show more</a></td>
            </tr>
          <% }) %> 
