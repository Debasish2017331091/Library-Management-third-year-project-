<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin=""/>
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="stylesheet" href="/css/book.css">
  <!-- <link rel="stylesheet" href="Css/rating.css"> -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <script src="https://kit.fontawesome.com/ec9dad747f.js" crossorigin="anonymous"></script>
  <title>Book Details</title>
</head>

<body>
  <header>
    <label class="logo">SUST LIBRARY</label>
    <a href="/home" class="btn btn-outline-primary mx-5">BACK</a>
  </header>
  <div class="col d-flex justify-content-center">
    <div class="card" style="width: 30rem;">
      <img class="card-img-top" src="/images/book1.jpg" alt="Card image cap" style="height: 400ps;width: 200px;text-align: center;">
      <div class="card-body" style="text-align: center;">
        <% console.log("Book") %> 
        <!-- Book ditails -->
        <div>
          <h5 class="card-title"><%= Book.title %></h5>
          <p class="card-text" style="display: inline-block"><b>by</b></p>
          <p class="card-text" style="display: inline-block"><%= Book.author %> </p>
        </div>
        
        <!-- <div>
          <h5 class="card-title"> Book title</h5>
          <p class="card-text" style="display: inline-block"><b>by</b></p>
          <p class="card-text" style="display: inline-block">Book Author</p>
        </div> -->
        <div>
          <p class="card-text" style="display: inline-block"><b>Rating : </b></p>
          <p class="card-text" style="display: inline-block">8/10</p>
        </div>
      </div>
    </div>
  </div>
  <!-- submit form -->
  <div class="col d-flex justify-content-center">
    <div class="card" style="width: 100rem;margin-top: 30px;">
      <h5 class="card-title">Comment here</h5>
      <% const b_id="/comment/"+Book._id %> 
      <% console.log(b_id); %> 
      <form action="<%= b_id %>"b_id method="post">
        <div class="form-group">
          <textarea class="form-control" name="rivew" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>     
    </div>
  </div>
  <!-- Show Comments -->
  <% for(var i=0;i<Book.comments.length;i+=2){ %>
    <div class="col d-flex justify-content-center">
      <div class="card" style="width: 100rem;margin-top: 30px;">
        <div class="card-body">
          <p class="card-text" ><b><%= Book.comments[i] %> :</b></p>
          <p class="card-text" ><%= Book.comments[i+1] %> </p>
        </div>
      </div>
    </div>
  <% } %>
</body>
</html>