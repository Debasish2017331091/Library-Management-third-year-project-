<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
  <link rel="stylesheet" href="/css/bookCatagory.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/nav.css" >
  <link rel="stylesheet" href="/css/search.css" >
  <link rel="stylesheet" href="/css/dropdown.css" >
  <script src="https://kit.fontawesome.com/ec9dad747f.js" crossorigin="anonymous"></script>
</head>

<body>
  <header>
    <label class="logo">SUST LIBRARY</label>
    <div class="search-box">
      <input type="text" class="search-txt" name="" placeholder="type to search">
      <a href="/search" class="search-btn">
        <i class="fas fa-search"></i>
      </a>
    </div>
    <div class="nav-links">
      <ul>
        <li><a href="#" class="btn btn-outline-primary">Books Catagory</a>
          <ul>
            <li><a href="/home" class="btn btn-outline-primary">All Books</a></li><br>
            <li><a href="/category/CSE" class="btn btn-outline-primary">CSE</a></li><br>
            <li><a href="/category/EEE" class="btn btn-outline-primary">EEE</a></li><br>
          </ul>
        </li>
        <li><a href="#" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#requestModal">Request
            Book</a></li>
        <li><a href="#" class="btn btn-outline-primary">Suggest Book</a></li>
        <a href="profile.html">
          <button class="bt btn-secondary">
            <i class="far fa-user"></i>
          </button>
        </a>
        <li><a href="/" class="btn btn-outline-success">Log Out</a></li>
      </ul>
    </div>
  </header>
  <!--request books-->
  <div class="modal fade" id="requestModal" tabindex="-1" aria-labelledby=requestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form class="" action="/request_book" method="post">
          <div class="modal-header">
            <h5 class="modal-title" id="requestModalLabel">Request Book</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="formGroupExampleInput" class="form-label">Book name</label>
              <input type="text" class="form-control" name="r_name" id="formGroupExampleInput" placeholder="Enter book name">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Author name</label>
              <input type="text" class="form-control" name="r_author_name" id="formGroupExampleInput2" placeholder="Enter author name">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">ISBN number</label>
              <input type="number" class="form-control" name="isbn_num" id="formGroupExampleInput2" placeholder="Enter ISBN number">
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary"
              data-bs-dismiss="modal">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="cards">
      <div class="all-books">
        <h1>Catagory:<%= cat %> </h1>
      </div>
      <% Books.forEach(function(Book){ %>
        <div class="card">
          <div class="image-section">
            <img src="/images/book1.jpg" alt="author" class="">
          </div>
          <div class="description">
            <h1><%= Book.title %> </h1>
            <h1>Author:<%= Book.author %> </h1>
            <h1>Rating:(3/5)</h1>
          </div>
          <div class="button-group">
            <a href="/book/<%=Book._id %> " class="remove">view details </a>
          </div>
          <div class="star-icons">
            <a href=""><i class="fas fa-star" aria-hidden="false"></i></a>
            <a href=""><i class="fas fa-star" aria-hidden="false"></i></a>
            <a href=""><i class="fas fa-star" aria-hidden="false"></i></a>
            <a href=""><i class="fas fa-star" aria-hidden="false"></i></a>
            <a href=""><i class="fas fa-star" aria-hidden="false"></i></a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</html>